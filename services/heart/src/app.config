<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
	</startup>
	<runtime>
		<caching enabled="true"/>
	</runtime>
	<log4net debug="false">
		<root>
			<level value="INFO" />
			<appender-ref ref="appender" />
		</root>
		<appender name="appender" type="log4net.Appender.RollingFileAppender">
			<staticLogFileName value="false" />
			<file value="logs/heart" />
			<appendToFile value="true" />
			<rollingStyle value="Date" />
			<datePattern value="_yyyy-MM-dd" />
			<layout type="log4net.Layout.PatternLayout">
				<header value="[Start of logging] " />
				<footer value="[End of logging]  " />
				<conversionPattern value="%date{dd.MM.yyyy HH:mm:ss.fff} %-5level %message %exception %newline" />
				<ignoresException value="false" />
			</layout>
		</appender>
	</log4net>
</configuration>